<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="#292E39"
    tools:context=".view.DetailsFragment">

    <ImageView
        android:id="@+id/civArtDetails"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_margin="30dp"
        android:src="@drawable/selectimage" />

    <EditText
        android:textColor="@android:color/white"
        android:id="@+id/detailsImageName"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:hint="Image Name" />

    <EditText
        android:textColor="@android:color/white"
        android:id="@+id/detailsSavedUserName"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:hint="Saved User Name" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/detailsFab"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:src="@drawable/ic_baseline_check_24" />

</LinearLayout>